  = javascript_include_tag 'prototype', 'effects','application', 'slideshow', 'gallery'
  %body
  %section#header
    %header
      #logo.shadow.hidden.floatLeft
        %hgroup
          %h1= link_to "Treasures of Quilting", "/"
