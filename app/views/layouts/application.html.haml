      %nav
        = render :partial => 'layouts/navigation', :locals => {:object => current_page(params)}
  %section#content.clearfix
    .inner
      = render :partial => 'shared/website_sidebar', :locals => {:web_pages => @web_pages}
      = yield
  %footer
    %nav
      = render :partial => 'layouts/navigation', :locals => {:object => current_page(params)}
