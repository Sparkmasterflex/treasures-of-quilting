#image-group{:class => "#{object.widgets.js_slideshow ? 'slideshow' : 'gallery'}"}
  %h4= object.widgets.js_slideshow ? Widget::Template::LABELS[object.widgets.js_slideshow.widget] : Widget::Template::LABELS[object.widgets.js_gallery.widget]
  %ul#slides
    = render :partial => '/images/image_edit', :collection => ordered_images(object.images), :as => :image, :locals => {:object => object}
